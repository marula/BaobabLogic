.navbar.navbar-inverse.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-inverse-collapse')
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='#{baseUrl}/')
        img.logo-nav(src="/images/logo.png" alt="")
    .navbar-collapse.collapse.navbar-inverse-collapse
      ul.nav.navbar-nav.navbar-right
        li(class="#{ current.source == 'index' ? 'active' : '' }")
          a(href=href="#{baseUrl}/") Home
        li(class="#{ current.source == 'projects' ? 'active' : '' }")
          a(href=href="#{baseUrl}/pages/projects") Projects
        li(class="#{ current.source == 'news' ? 'active' : '' }")
          a(href=href="#{baseUrl}/pages/news") News
        li(class="#{ current.source == 'about-us' ? 'active' : '' }")
          a(href=href="#{baseUrl}/pages/about-us") About Us
        li(class="#{ current.source == 'documentation' ? 'active' : '' }")
          a(href="#{baseUrl}/docs/documentation") Documentation
